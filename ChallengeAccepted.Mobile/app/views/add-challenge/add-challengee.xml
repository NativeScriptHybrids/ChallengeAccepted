<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <GridLayout rows="auto, *, auto" class="page-background">
        <SegmentedBar row="0" id="top-segmented-bar" class="main-page-segmented-bar">
          <SegmentedBar.items>
            <SegmentedBarItem title="Active"/>
            <SegmentedBarItem title="Done"/>
            <SegmentedBarItem title="Edit"/>
            <SegmentedBarItem title="Added"/>
            <SegmentedBarItem title="Badges"/>
          </SegmentedBar.items>
        </SegmentedBar>

        <GridLayout row="1" rows="auto, auto, auto, auto, auto, auto">
            <TextField row="0" id="add-title" class="text-input" hint="Title"/>
            <TextField row="1" id="add-image-url" class="text-input" hint="Image Url"/>
            <TextField row="2" id="add-description" class="text-input" hint="Description"/>
            <TextField row="3" id="add-rating" class="text-input" hint="Difficulty"/>
            <TextField row="4" id="add-days-to-complete" class="text-input" hint="Days To Complete"/>
            <Button row="5" text="Add Challenge" id="add-challenge-btn" tap="onAddBtnTap"/>
        </GridLayout>  

        <SegmentedBar row="2" id="bottom-segmented-bar" class="main-page-segmented-bar">
          <SegmentedBar.items>
            <SegmentedBarItem title="Add"/>
            <SegmentedBarItem title="Pick"/>
            <SegmentedBarItem title="Profile"/>
            <SegmentedBarItem title="Rate"/>
            <SegmentedBarItem title="Logout"/>
          </SegmentedBar.items>
        </SegmentedBar>    
    </GridLayout>
</Page>